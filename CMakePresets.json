{
  "version": 6,
  "configurePresets": [
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug (vcpkg)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/msvc-debug",
      "architecture": { "value": "x64" },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_FEATURE_FLAGS": "manifests"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release (vcpkg)",
      "inherits": "msvc-debug",
      "binaryDir": "${sourceDir}/build/msvc-release",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    }
  ],
  "buildPresets": [
    { "name": "build-msvc-debug", "configurePreset": "msvc-debug" },
    { "name": "build-msvc-release", "configurePreset": "msvc-release" }
  ]
}
